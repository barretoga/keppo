// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  type        String   // "ONE_TIME" or "RECURRING"
  date        DateTime? // For one-time events
  cron        String?   // For recurring events
  channelId   String?   // Discord Channel ID
  userId      Int?
  user        User?     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id                 Int                  @id @default(autoincrement())
  email              String               @unique
  password           String
  discordId          String?              @unique
  events             Event[]
  mangaSubscriptions MangaSubscription[]
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
}

model GuildConfig {
  id               Int      @id @default(autoincrement())
  guildId          String   @unique
  defaultChannelId String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model MangaSubscription {
  id          Int      @id @default(autoincrement())
  malId       Int      // MyAnimeList manga ID
  title       String
  coverImage  String?  // Cover image URL
  lastChapter Int      @default(0) // Last known chapter count
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  channelId   String   // Discord channel for notifications
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([malId, userId]) // One subscription per manga per user
}
